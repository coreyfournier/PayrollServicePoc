{
  "realm": "payroll-pro",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Standard user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ]
  },
  "clients": [
    {
      "clientId": "payroll-frontend",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "redirectUris": ["http://localhost:3000/*"],
      "webOrigins": ["http://localhost:3000"],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocolMappers": [
        {
          "name": "payroll-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "payroll-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "payroll-api",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false
    },
    {
      "clientId": "seed-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "seed-client-secret",
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "protocolMappers": [
        {
          "name": "payroll-api-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "payroll-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "seed-bot",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Seed",
      "lastName": "Bot",
      "email": "seed-bot@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "seed-bot-password",
          "temporary": false
        }
      ],
      "realmRoles": ["user", "admin"]
    }
  ],
  "identityProviders": [
    {
      "alias": "shared-idp",
      "displayName": "Login with Shared Account",
      "providerId": "oidc",
      "enabled": true,
      "trustEmail": true,
      "storeToken": false,
      "addReadTokenRoleOnCreate": false,
      "firstBrokerLoginFlowAlias": "first broker login",
      "config": {
        "authorizationUrl": "http://localhost:8180/realms/shared/protocol/openid-connect/auth",
        "tokenUrl": "http://keycloak:8180/realms/shared/protocol/openid-connect/token",
        "jwksUrl": "http://keycloak:8180/realms/shared/protocol/openid-connect/certs",
        "userInfoUrl": "http://keycloak:8180/realms/shared/protocol/openid-connect/userinfo",
        "logoutUrl": "http://localhost:8180/realms/shared/protocol/openid-connect/logout",
        "issuer": "http://localhost:8180/realms/shared",
        "clientId": "shared-broker",
        "clientSecret": "shared-broker-secret",
        "clientAuthMethod": "client_secret_post",
        "defaultScope": "openid profile email",
        "syncMode": "FORCE",
        "validateSignature": "true",
        "useJwksUrl": "true"
      }
    }
  ],
  "identityProviderMappers": [
    {
      "name": "email-mapper",
      "identityProviderAlias": "shared-idp",
      "identityProviderMapper": "oidc-user-attribute-idp-mapper",
      "config": {
        "claim": "email",
        "user.attribute": "email",
        "syncMode": "FORCE"
      }
    },
    {
      "name": "first-name-mapper",
      "identityProviderAlias": "shared-idp",
      "identityProviderMapper": "oidc-user-attribute-idp-mapper",
      "config": {
        "claim": "given_name",
        "user.attribute": "firstName",
        "syncMode": "FORCE"
      }
    },
    {
      "name": "last-name-mapper",
      "identityProviderAlias": "shared-idp",
      "identityProviderMapper": "oidc-user-attribute-idp-mapper",
      "config": {
        "claim": "family_name",
        "user.attribute": "lastName",
        "syncMode": "FORCE"
      }
    }
  ]
}
